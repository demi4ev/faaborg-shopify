<div class="width">
  <a href="/" class="header-logo">
    <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ site.name }}">
  </a>
  <h1>Header</h1>
</div>

<style>
  .header-logo {
    max-width: {{ section.settings.logo_width }}px;
  }
</style>

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "class": "header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo width",
      "default": 100,
      "min": 20,
      "max": 300,
      "step": 5
    }
  ]
}
{% endschema %}