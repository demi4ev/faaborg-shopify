{{ 'footer.css' | asset_url | stylesheet_tag }}

<div class="footer__container">

  <div class="footer__about">
    <h3 class="footer__h3">About SHOP</h3>
    <p class="footer__text">SHOP is a global fashion and lifestyle e-retailer committed to making the beauty of fashion accessible to all.
    We use on-demand manufacturing technology to connect suppliers to our agile supply chain.</p>
    <a class="footer__link" href="{{ link.url }}">Read more</a>
  </div>

  {% for block in section.blocks %}
    {% if block.type == 'navigation' %}
      <div class="footer__nav">
        <h4 class="footer__h4">{{ block.settings.linklist.title }}</h4>
        {% for link in block.settings.linklist.links %}
          <li class="">
            <a href="{{ link.url }}" class="">
              {{ link.title }}
            </a>
          </li>
        {% endfor %}
      </div>
    {% endif %}
  {% endfor %}

  {% comment %} {% if section.settings.enable_footer_nav %}
    <ul class="footer__nav">
      {% for item in section.settings.footer_nav_items %}
        <ul class="footer__nav-item">
          <h4 class="footer__h4">{{ item.title }}</h4>
          <li><a href="{{ item.link }}">{{ item.title }}</a></li>
        </ul>
      {% endfor %}
    </ul>
  {% endif %} {% endcomment %}

  {% comment %} <ul class="footer__nav">
    <ul class="footer__nav-item">
      <h4 class="footer__h4">Company info</h4>
      <li>About SHOP</li>
      <li>Affiliate</li>
      <li>Fashion Blogger</li>
      <li>Social Responsibility</li>
      <li>Careers</li>
    </ul>
