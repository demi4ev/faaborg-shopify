{{ 'footer.css' | asset_url | stylesheet_tag }}

<div class="footer__container">

  <div class="footer__about">
    <h3 class="footer__h3">About SHOP</h3>
    <p class="footer__text">SHOP is a global fashion and lifestyle e-retailer committed to making the beauty of fashion accessible to all.
    We use on-demand manufacturing technology to connect suppliers to our agile supply chain.</p>
    <a class="footer__link" href="{{ link.url }}">Read more</a>
  </div>

  <nav class="footer__links">

  </nav>

  {% if section.settings.show_payment_logos and shop.enabled_payment_types.size > 0 %}
    <ul class="footer__payment-logos">
      {% for type in shop.enabled_payment_types %}
        <li>
          <!-- Здесь вы можете использовать различные способы получения SVG-иконок для каждого метода оплаты -->
          <!-- Например, вы можете использовать атрибут type для определения, какую иконку показывать -->
          <img src="{{ type | payment_type_icon_url }}" alt="{{ type }}" loading="lazy">
        </li>
      {% endfor %}
    </ul>
  {% endif %}


</div>


{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "class": "footer",
  "settings": [
    {
      "type": "range",
      "id": "padding",
      "label": "Footer height",
      "default": 24,
      "min": 5,
      "max": 100,
      "step": 1
    },
    {
      "type": "checkbox",
      "id": "show_payment_logos",
      "label": "Show Payment Logos",
      "default": true
    }
  ]
}
{% endschema %}