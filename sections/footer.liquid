{{ 'footer.css' | asset_url | stylesheet_tag }}

<div class="footer__container">

  <div class="footer__about">
    <h3 class="footer__h3">About SHOP</h3>
    <p class="footer__text">SHOP is a global fashion and lifestyle e-retailer committed to making the beauty of fashion accessible to all.
    We use on-demand manufacturing technology to connect suppliers to our agile supply chain.</p>
    <a class="footer__link" href="{{ link.url }}">Read more</a>
  </div>

  <nav class="footer__links">

  </nav>


</div>


{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "class": "footer",
  "settings": [
    {
      "type": "range",
      "id": "padding",
      "label": "Footer height",
      "default": 24,
      "min": 5,
      "max": 100,
      "step": 1
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo width",
      "default": 100,
      "min": 20,
      "max": 300,
      "step": 5
    },
    {
      "type": "link_list",
      "id": "navigation",
      "label": "Navigation menu",
      "default": "main-menu"
    },
    {
      "type": "checkbox",
      "id": "show_catalog_button",
      "label": "Show catalog button",
      "default": true
    }
  ]
}
{% endschema %}