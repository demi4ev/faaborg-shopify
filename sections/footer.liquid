{{ 'footer.css' | asset_url | stylesheet_tag }}

<div class="footer__container">

  <div class="footer__nav">

    {% for block in section.blocks %}

      {% if block.type == 'text' %}
        <div class="footer__about">
          <h4 class="footer__h3">{{ block.settings.heading }}</h4>
          {{ block.settings.text }}
        </div>

      {% elsif block.type == 'navigation' %}
        <div class="footer__nav-column">
          <h4 class="footer__h4">{{ block.settings.linklist.title }}</h4>
          {% for link in block.settings.linklist.links %}
            <li class="">
              <a href="{{ link.url }}" class="">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </div>

      {% elsif block.type == 'newsletter' %}
        <div class="footer__subscribe">
          <h4 class="footer__h3">{{ block.settings.heading }}</h4>
          {% form 'customer', id: 'footer-newsletter' %}
            {% if form.posted_successfully? %}
              <p class="footer-column-news-message">You've been subscribed!</p>
            {% endif %}
            {% if form.errors %}
              <p class="footer-column-news-message">{{ form.errors.messages.email }}</p>
            {% endif %}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <input name="contact[email]" type="email" placeholder="Email address">
            <button type="submit">Subscribe</button>
            {{ block.settings.text }}
          {% endform %}
        </div>
      {% endif %}

    {% endfor %}

    </div>

  {% if section.settings.show_payment_logos and shop.enabled_payment_types.size > 0 %}
    <ul class="footer__payment-logos">
      {% for type in shop.enabled_payment_types %}
        <li>
          <img src="{{ type | payment_type_icon_url }}" alt="{{ type }}" loading="lazy">
        </li>
      {% endfor %}
    </ul>
  {% endif %}


  <div class="footer__copyright">
    <small class="copyright__content">
      &copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: routes.root_url }}
    </small>
    <small class="copyright__content">{{ powered_by_link }}</small>
    {%- if section.settings.show_policy -%}
      <ul class="policies list-unstyled">
        {%- for policy in shop.policies -%}
          {%- if policy != blank -%}
            <li>
              <small class="copyright__content">
                <a href="{{ policy.url }}">{{ policy.title }}</a>
              </small>
            </li>
          {%- endif -%}
        {%- endfor -%}
      </ul>
    {%- endif -%}
  </div>

  <div class="footer__privacy-links">
    {% assign policies = shop.policies %}
    {% if policies.size > 0 %}
      <ul class="list-unstyled">
        {% for policy in policies %}
          {% if policy.url and policy.title %}
            <li><a href="{{ policy.url }}">{{ policy.title }}</a></li>
          {% endif %}
        {% endfor %}
      </ul>
    {% endif %}
  </div>

  <div class="footer__language">
    {% if section.settings.enable_country_selector %}
      <select class="country-selector">
        {% for country in shop.countries %}
          <option value="{{ country.code }}">{{ country.name }}</option>
        {% endfor %}
      </select>
    {% endif %}
  </div>


</div>


{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "class": "footer",
  "settings": [
    {
      "type": "range",
      "id": "padding",
      "label": "Footer height",
      "default": 24,
      "min": 5,
      "max": 100,
      "step": 1
    },
    {
      "type": "checkbox",
      "id": "show_payment_logos",
      "label": "Show Payment Logos",
      "default": true
    }
  ],
  "max_blocks": 5,
  "blocks": [
    {
      "name": "Navigation column",
      "type": "navigation",
      "settings": [
        {
          "type": "link_list",
          "id": "linklist",
          "label": "Navigation menu"
        }
      ]
    },
    {
      "name": "Text",
      "type": "text",
      "settings": [
        {
          "id": "heading",
          "type": "text",
          "label": "Heading text"
        },
        {
          "id": "text",
          "type": "richtext",
          "label": "Body text"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "settings": [
        {
          "id": "heading",
          "type": "text",
          "label": "Heading text"
        },
        {
          "id": "text",
          "type": "richtext",
          "label": "Body text"
        }
      ]
    }
  ]
}
{% endschema %}