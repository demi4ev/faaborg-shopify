<div class="width">
  <a href="/" class="header-logo">
    <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ site.name }}">
  </a>
  <ul class="header-nav">
    {% for link in section.settings.navigation.links %}
      <li>
        <a href="{{ link.url }}">
          {{ link.title }}
        </a>
      </li>
    {% endfor %}
  </ul>
</div>

<style>
  .header-logo {
    max-width: {{ section.settings.logo_width }}px;
  }
</style>

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "class": "header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo width",
      "default": 100,
      "min": 20,
      "max": 300,
      "step": 5
    },
    {
      "type": "link_list",
      "id": "navigation",
      "label": "Navigation menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}