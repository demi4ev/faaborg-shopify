$fadeOff: left Os 0.4s, opacity 0.4s;
$fadeOn: left 0s, opacity 0.4s;
$width: {{ settings.page_width }}px;
$bp: 960px;


/* Reset */

{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

img, svg {
  display: block;
  width: 100%;
}


/* Page */

.width {
  max-width: $width;
  width: calc(100% - 40px);
  margin: 0 auto;

  @media (min-width: $bp) {
    width: calc(100% - 80px);
  }
}


/* Header */

.header-logo {
  display: block;
}