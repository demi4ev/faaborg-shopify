$fadeOff: left Os 0.4s, opacity 0.4s;
$fadeOn: left 0s, opacity 0.4s;
$width: {{ settings.page_width }} px;
$bg: {{ settings.background_color }};
$text: {{ settings.text_color }};
$bp: 960px;


/* Reset */

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  background: $bg;
  color: $text;
  font-size: 100%;
  font-family: "swiss_721_n4", system-ui, -apple-system;
}

img,
svg {
  display: block;
  width: 100%;
}

button,
input,
select,textarea {
  outline: none;
  border: none;
  background: transparent;
  -webkit-appearance: none;
  -moz-appearance: none;
  -ms-appearance: none;
  -o-appearance: none;
  appearance: none;
}

a {
  text-decoration: none;
}

li {
  list-style: none;
}


/* Page */

.width {
  max-width: $width;
  width: calc(100% - 40px);
  margin: 0 auto;

  @media (min-width: $bp) {
    width: calc(100% - 80px);
  }
}


/* Header */

.header {
  background: $bg;
}

.header-flex {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-logo {
  display: block;
}

.header-hamburger {
  width: 24px;
  display: block;
}

.header-hamburger-bar {
  height: 2px;
  width: 100%;
  background: $text;
  display: block;

  & + & {
    margin-top: 8px;
  }
}

.header-nav {
  position: fixed;
  top: 0;
  left; 0;
  height: 100%;
  overflow: auto;
  background: $bg;
  width: 90%;
  max-width: 280px;
}