$fadeOff: left Os 0.4s, opacity 0.4s;
$fadeOn: left 0s, opacity 0.4s;
$width: {{ settings.page_width }} px;
$bg: {{ settings.background_color }};
$border: {{ settings.border_color }};
$text: {{ settings.text_color }};
$mediumText: {{ settings.medium_text_color }};
$bp: 960px;


/* Reset */

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  background: $bg;
  color: $text;
  font-size: 100%;
  font-family: "swiss_721_n4", system-ui, -apple-system;
}

img,
svg {
  display: block;
  width: 100%;
}

button,
input,
select,textarea {
  outline: none;
  border: none;
  background: transparent;
  -webkit-appearance: none;
  -moz-appearance: none;
  -ms-appearance: none;
  -o-appearance: none;
  appearance: none;
}

p {
  color: $text;
  font-family: Switzer;
  font-size: 16px;
  font-style: normal;
  font-weight: 400;
  line-height: 26px; /* 162.5% */
}

a {
  text-decoration: none;
}

li {
  list-style: none;
}


/* Page */

.width {
  max-width: $width;
  width: calc(100% - 40px);
  margin: 0 auto;

  @media (min-width: $bp) {
    width: calc(100% - 80px);
  }
}

.hero {
  background: black;
  color: white;
  padding: 200px 0;
}


/* Header */

.header {
  background: $bg;
}

.header-flex {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-logo {
  display: block;
}

.header-hamburger {
  width: 24px;
  display: block;

  @media (min-width: $bp) {
    display: none;
  }
}

.header-hamburger-bar {
  height: 2px;
  width: 100%;
  background: $text;
  display: block;

  & + & {
    margin-top: 8px;
  }
}

.header-nav-overlay {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.6);
  z-index: 9;
  opacity: 0;
  left: -100%;
  transition: $fadeOff;

  @media (min-width: $bp) {
    display: none;
  }

  .nav-active & {
    left: 0;
    opacity: 1;
    transition: $fadeOn;

    @media (min-width: $bp) {
      display: none;
    }
  }
}

.header-nav {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  overflow: auto;
  background: $bg;
  width: 90%;
  max-width: 280px;
  z-index: 10;
  transform: translateX(-100%);
  transition: 0.4s transform;

  @media (min-width: $bp) {
    position: static;
    display: inline-flex;
    align-items: center;
    gap: 40px;
    width: auto;
    max-width: none;
    height: auto;
    overflow: initial;
    background: transparent;
    transform: none;
  }

  .nav-active & {
    transform: none;
  }
}

.header-nav-item {
  padding: 20px;
  border-bottom: 1px solid $border;

  @media (min-width: $bp) {
    padding: 0;
    border: none;
    position: relative;
  }
}

.header-nav-anchor {
  display: block;
  color: $text;
  font-size: 20px;
}

.header-sub {
  padding: 0 20px;
  margin-top: 14px;

  @media (min-width: $bp) {
    position: absolute;
    top: 0;
    left 50%;
    transform: translateX(-50%);
    background: $bg;
    border-radius: 20px;
    border: 1px solid black;
  }
}

.header-sub-item {
  & + & {
    margin-top: 5px;
  }
}

.header-sub-anchor {
  color: $mediumText;
  transition: 0.2s color;

  &:hover {
    color: $text;
  }
}