{{ 'footer.css' | asset_url | stylesheet_tag }}

<div class="footer__container">

  <div class="footer__about">
    <h3 class="footer__h3">About SHOP</h3>
    <p class="footer__text">SHOP is a global fashion and lifestyle e-retailer committed to making the beauty of fashion accessible to all.
    We use on-demand manufacturing technology to connect suppliers to our agile supply chain.</p>
    <a class="footer__link" href="{{ link.url }}">Read more</a>
  </div>

  <nav class="footer__links">

  </nav>


  <img src="{{ 'visa.svg' | asset_url }}" alt="Payment Logo 1" loading="lazy" width="100px!important">


  {% if section.settings.show_payment_logos %}
    <ul class="footer__payment-logos">
      {% if section.settings.payment_logo_1 != blank %}
        <li>
          <img src="{{ section.settings.payment_logo_1 | image_url: 'master' }}" alt="Payment Logo 1" loading="lazy">
        </li>
      {% endif %}
      {% if section.settings.payment_logo_2 != blank %}
        <li>
          <img src="{{ section.settings.payment_logo_2 | image_url: 'master' }}" alt="Payment Logo 2" loading="lazy">
        </li>
      {% endif %}
      {% if section.settings.payment_logo_3 != blank %}
        <li>
          <img src="{{ section.settings.payment_logo_3 | image_url: 'master' }}" alt="Payment Logo 3" loading="lazy">
        </li>
      {% endif %}
      {% if section.settings.payment_logo_4 != blank %}
        <li>
          <img src="{{ section.settings.payment_logo_4 | image_url: 'master' }}" alt="Payment Logo 4" loading="lazy">
        </li>
      {% endif %}
    </ul>
  {% endif %}





</div>


{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "class": "footer",
  "settings": [
    {
      "type": "range",
      "id": "padding",
      "label": "Footer height",
      "default": 24,
      "min": 5,
      "max": 100,
      "step": 1
    },
    {
      "type": "checkbox",
      "id": "show_payment_logos",
      "label": "Show Payment Logos",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "payment_logo_1",
      "label": "Payment Logo 1"
    },
    {
      "type": "image_picker",
      "id": "payment_logo_2",
      "label": "Payment Logo 2"
    },
    {
      "type": "image_picker",
      "id": "payment_logo_3",
      "label": "Payment Logo 3"
    },
    {
      "type": "image_picker",
      "id": "payment_logo_4",
      "label": "Payment Logo 4"
    },
    {
      "type": "image_picker",
      "id": "payment_logo_5",
      "label": "Payment Logo 5"
    },
    {
      "type": "image_picker",
      "id": "payment_logo_6",
      "label": "Payment Logo 6"
    }
  ]
}
{% endschema %}